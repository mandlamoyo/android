<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp" >

    <TextView
        android:id="@+id/list_item_separator"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white" />
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
	    
	
	    <TextView
	        android:id="@+id/list_item_name"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:textColor="@android:color/white"
	        android:layout_marginLeft="6dp"
	        android:layout_marginTop="6dp"
	        android:textSize="25sp" />
	    
	    <TextView
	        android:id="@+id/list_item_price"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:textColor="@android:color/white"
	        android:layout_marginRight="6dp"
	        android:layout_marginTop="6dp"
	        android:textSize="25sp" />
	    
	    <TextView
	        android:id="@+id/list_item_quantity"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/list_item_name"
	        android:layout_alignLeft="@id/list_item_name"
	        android:textSize="15sp" />
	    
	    <TextView
	        android:id="@+id/list_item_currency"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:layout_below="@id/list_item_price"
	        android:layout_alignRight="@id/list_item_price"
	        android:textSize="15sp" />
	    
	    
	</RelativeLayout>
</LinearLayout>