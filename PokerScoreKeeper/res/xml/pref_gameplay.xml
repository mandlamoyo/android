<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
     
    <!-- Scoring Mode -->
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_scoring_mode_list_titles"
        android:entryValues="@array/pref_scoring_mode_list_values"
        android:key="gameplay_scoring_mode"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_scoring_mode" />
    
    <!-- Max Players -->
    <EditTextPreference
        android:inputType="number"
        android:defaultValue="@string/pref_default_max_players"
        android:key="gameplay_max_players"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_max_players" />
    
    <!-- Player Order -->
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/pref_player_order_list_titles"
        android:entryValues="@array/pref_player_order_list_values"
        android:key="gameplay_player_order"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_player_order" />
        
</PreferenceScreen>