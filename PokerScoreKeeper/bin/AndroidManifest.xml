<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mandla.pokerscorekeeper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name="com.mandla.pokerscorekeeper.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mandla.pokerscorekeeper.MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName="com.example.myfirstapp.WelcomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myfirstapp.WelcomeActivity" />
        </activity>
        <activity
            android:name="com.mandla.pokerscorekeeper.PlayerInfoActivity"
            android:label="@string/title_activity_player_info"
            android:parentActivityName="com.mandla.pokerscorekeeper.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mandla.pokerscorekeeper.MainActivity" />
        </activity>
        <activity
            android:name="com.mandla.pokerscorekeeper.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.mandla.pokerscorekeeper.WelcomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mandla.pokerscorekeeper.WelcomeActivity" />
        </activity>
    </application>

</manifest>
